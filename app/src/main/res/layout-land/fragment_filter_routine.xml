<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="730dp"
                android:layout_height="202dp"
                android:background="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="224dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/difficulty_level"
                    android:textColor="@color/accent"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_difficulty_advanced"
                    style="@style/roundedWhiteButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/difficulty_advanced"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_difficulty_advanced_yellow"
                    style="@style/roundedYellowButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/difficulty_advanced"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_difficulty_beginner"
                    style="@style/roundedWhiteButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="100dp"
                    android:text="@string/difficult_beginner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_difficulty_beginner_yellow"
                    style="@style/roundedYellowButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="100dp"
                    android:text="@string/difficult_beginner"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_difficulty_intermediate"
                    style="@style/roundedWhiteButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="100dp"
                    android:text="@string/difficulty_intermediate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_difficulty_intermediate_yellow"
                    style="@style/roundedYellowButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="80dp"
                    android:text="@string/difficulty_intermediate"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/btn_difficulty_advanced"
                    app:layout_constraintStart_toEndOf="@+id/btn_difficulty_beginner"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="738dp"
                android:layout_height="218dp"
                android:background="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


                <TextView
                    android:id="@+id/time"
                    android:layout_width="107dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/time"
                    android:textColor="@color/accent"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_interval1"
                    style="@style/roundedWhiteButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="90dp"
                    android:text="@string/time_interval1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_interval1_yellow"
                    style="@style/roundedYellowButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="90dp"
                    android:text="@string/time_interval1"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_interval2"
                    style="@style/roundedWhiteButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="90dp"
                    android:text="@string/time_interval2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_interval2_yellow"
                    style="@style/roundedYellowButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="80dp"
                    android:text="@string/time_interval2"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/btn_interval3"
                    app:layout_constraintStart_toEndOf="@+id/btn_interval1"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_interval3"
                    style="@style/roundedWhiteButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/time_interval3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_interval3_yellow"
                    style="@style/roundedYellowButton"
                    android:layout_width="190dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/time_interval3"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="729dp"
                android:layout_height="244dp"
                android:background="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="367dp"
                    android:layout_height="43dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/spinner_bg"
                    android:popupBackground="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_save"
                    style="@style/roundedYellowButton"
                    android:layout_width="353dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/filter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                    app:layout_constraintTop_toBottomOf="@+id/spinner" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="236dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="46dp"
                    android:text="@string/equipacionExtra"
                    android:textColor="@color/accent"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_sport"
                    android:textColor="@color/accent"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@+id/spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>