<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".bodyActivity.BodyActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cycleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycle_name" />

        <TextView
            android:id="@+id/routine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nombre de la rutina"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cycle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Nombre del ciclo"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/routine_name" />

        <TextView
            android:id="@+id/repetitionsRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="7dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/remainingMessage"
            app:layout_constraintStart_toEndOf="@+id/remainingMessage"
            app:layout_constraintTop_toTopOf="@+id/remainingMessage"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/remainingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:text="Repeticiones de este ciclo restantes:"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycle_name" />

        <TextView
            android:id="@+id/de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="de"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/remainingMessage"
            app:layout_constraintStart_toEndOf="@+id/repetitionsRemaining"
            app:layout_constraintTop_toTopOf="@+id/remainingMessage" />

        <TextView
            android:id="@+id/subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/remainingMessage"
            app:layout_constraintStart_toEndOf="@+id/de"
            app:layout_constraintTop_toTopOf="@+id/remainingMessage" />


</androidx.constraintlayout.widget.ConstraintLayout>