<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:id="@+id/execRoutineContainer"
    tools:context=".bodyActivity.BodyActivity">

    <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/cycleInfo"
        android:layout_width="362dp"
        android:layout_height="106dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_border_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>


    <TextView
        android:id="@+id/cycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nombre del ciclo"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="35dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/cycleInfo"
        app:layout_constraintStart_toStartOf="@+id/cycleInfo"
        app:layout_constraintTop_toTopOf="@+id/cycleInfo" />

    <TextView
        android:id="@+id/cycle_remaining"
        android:layout_width="328dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Repeticiones de este ciclo restantes:"
        android:textColor="@color/accent"
        android:textSize="17dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/cycleInfo"
        app:layout_constraintTop_toBottomOf="@+id/cycle_name" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cycleRecyclerView"
        android:layout_width="353dp"
        android:layout_height="435dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cycleInfo" />

    <TextView
        android:id="@+id/rewind"
        android:layout_width="96dp"
        android:layout_height="120dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-80dp"
        android:text="⟳"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
        app:layout_constraintVertical_bias="0.738" />

    <TextView
        android:id="@+id/play"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:text="▶"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="80dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toEndOf="@+id/rewind"
        app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/pause"
        android:layout_width="58dp"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:text="▍▍"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toEndOf="@+id/rewind"
        app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>