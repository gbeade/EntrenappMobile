<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:id="@+id/execRoutineContainer"
    tools:context=".bodyActivity.BodyActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cycleRecyclerView"
            android:layout_width="388dp"
            android:layout_height="480dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycle_remaining" />

        <TextView
            android:id="@+id/routine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Nombre de la rutina"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cycle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Nombre del ciclo"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/routine_name" />

        <TextView
            android:id="@+id/cycle_remaining"
            android:layout_width="365dp"
            android:layout_height="18dp"
            android:layout_marginTop="32dp"
            android:text="Repeticiones de este ciclo restantes:"
            android:textColor="@color/accent"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycle_name" />

        <TextView
            android:id="@+id/rewind"
            android:layout_width="96dp"
            android:layout_height="120dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="27dp"
            android:text="⟳"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="100dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
            />

        <TextView
            android:id="@+id/play"
            android:layout_width="99dp"
            android:layout_height="101dp"
            android:layout_marginTop="-20dp"
            android:text="▶"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="80dp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
            app:layout_constraintVertical_bias="0.496"
            />

        <TextView
            android:id="@+id/pause"
            android:layout_width="69dp"
            android:layout_height="65dp"
            android:layout_marginTop="-20dp"
            android:text="▍▍"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="40dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
            app:layout_constraintVertical_bias="0.597"
            />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="99dp"
            android:layout_height="101dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="✗"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="80dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.854"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycleRecyclerView"
            app:layout_constraintVertical_bias="0.044"
            />


</androidx.constraintlayout.widget.ConstraintLayout>