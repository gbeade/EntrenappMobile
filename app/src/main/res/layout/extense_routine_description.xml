<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/routine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@{routine.name}"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="20dp"


                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/routine_duration"
                android:layout_width="267dp"
                android:layout_height="41dp"
                android:layout_marginTop="40dp"
                android:padding="5dp"
                android:text="@{routine.duration}"
                android:textColor="@color/primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/routine_needsEquipment" />

            <TextView
                android:id="@+id/routine_needsEquipment"
                android:layout_width="261dp"
                android:layout_height="27dp"
                android:padding="5dp"
                android:text="@{routine.isEquipmentRequired}"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/routine_punctuation" />

            <TextView
                android:id="@+id/routine_category"
                android:layout_width="259dp"
                android:layout_height="29dp"
                android:layout_marginTop="11dp"
                android:padding="5dp"
                android:text="@{routine.category}"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/routine_name" />

            <TextView
                android:id="@+id/routine_creation_date"
                android:layout_width="263dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@{routine.date}"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/routine_category" />

            <TextView
                android:id="@+id/routine_punctuation"
                android:layout_width="261dp"
                android:layout_height="27dp"
                android:padding="5dp"
                android:text="@{routine.punctuation}"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/routine_creation_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
