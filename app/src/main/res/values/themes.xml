<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Entrenapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:actionOverflowButtonStyle">@style/MyTheme</item>
    </style>


    <style name="roundedYellowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="cornerRadius">80dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="roundedWhiteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">80dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>


    <style name="roundedTextBox" parent="Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_white_rectangle</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="MyTheme" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/accent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="myTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">@color/accent</item>
        <item name="android:numbersBackgroundColor">@color/accent</item>
        <item name="android:numbersSelectorColor">@color/accent</item>
        <item name="android:headerBackground">@color/accent</item>
    </style>




</resources>